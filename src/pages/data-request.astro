---
import Layout from '../layouts/Layout.astro';
---

<Layout>
	<div class="min-h-screen flex items-center justify-center p-8">
		<div class="max-w-2xl mx-auto text-center">
			<h1 class="text-5xl lg:text-7xl text-[#FFBF00] mb-8 leading-[0.9]">
				Data Request
			</h1>
			
			<h2 class="text-2xl lg:text-3xl text-[#FFBF00] mb-12">
				Village Manager
			</h2>
			
			<div class="text-lg lg:text-xl text-[#FFBF00] leading-relaxed space-y-6">
				<p>
					To request deletion or modification of your personal data from the Village Manager app, please contact us at:
				</p>
				
				<div class="text-2xl lg:text-3xl">
					<a 
						href="mailto:email@unusualundertaking.com?subject=Village Manager Data Request" 
						class="border-b-2 border-[#FFBF00] hover:text-[#FFBF00]/80 transition-colors"
					>
						email@unusualundertaking.com
					</a>
				</div>
				
				<p class="text-base lg:text-lg text-[#FFBF00]/80">
					Please include "Village Manager Data Request" in your subject line and specify whether you'd like to delete or modify your data.
				</p>
			</div>
		</div>
	</div>
</Layout>