---
import Layout from '../layouts/Layout.astro';
import { Balls } from '../scenes/balls';
import bg from '../assets/bg.jpg';
import { Image } from 'astro:assets';
---

<Layout>
	<div id="hero" class="absolute inset-0 w-full h-full z-1 opacity-40">
		<Balls client:only="react" />
	</div>

	<div class="grid grid-cols-12 p-16 py-10 relative bg-gradient-to-b from-stone-700 to-black mx-auto">
		<Image src={bg} alt="background" class="absolute inset-0 w-full h-full filter contrast-250 brightness-100 z-0" />

		<div class="flex flex-col justify-start items-start col-span-12 relative">
			<h1 class="text-[9rem] max-w-xs foreground z-10 leading-[0.9] text-[#ffbb00]">unusual undertaking</h1>
		</div>

		<div class="flex flex-col justify-start place-items-baseline items-start col-span-12 relative">
			<h2 class="text-5xl leading-[1.3] foreground z-10 mt-8 text-[#FFBF00] max-w-4xl mb-32">a studio blending art + engineering to create digital things that people love</h2>
		</div>

		<div class="flex flex-col justify-start place-items-baseline items-start col-span-12 relative">
			<h3 class="text-5xl leading-[1.3] foreground z-10 mt-12 text-[#FFBF00] max-w-4xl">
				Available for new projects. Send an email to: <a href="mailto:email@unusualundertaking.com" class="border-b border-[#FFBF00] hover:text-[#FFBF00]">email@unusualundertaking.com</a>
			</h3>
		</div>

		<div class="flex flex-col justify-start place-items-baseline items-start col-span-12 relative mb-44">
			<p class="text-5xl leading-[1.3] foreground z-10 mt-8 text-[#FFBF00] mb-2">Specializing in:</p>
			<p class="text-5xl leading-[1.3] foreground z-10 text-[#FFBF00]">
				Landing Pages & Marketing sites, Full-stack web development, cross-platform mobile apps, game prototyping, creative coding projects, and more.
			</p>
		</div>
	</main>
</Layout>
