---
import Header from "../components/Header.astro";
import BlurCircle from "@/components/shared/BlurCircle.astro";
import theme from "@/data/theme";
import SEOTags from "@/components/seo/SEOTags.astro";

import "@fontsource/bluu-next";
import "@/styles/tailwind.css";
import "@/styles/post.css";

export interface Props {
  title?: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <SEOTags title={title} />

  <body
    class="bg-neutral-950 text-sm text-neutral-400"
    id="meow"
  >
    <div class="mx-auto flex min-h-screen max-w-[1200px] flex-col gap-9 px-10 py-8 md:gap-20 md:py-16">
      <Header />
      <BlurCircle position="top" color={theme.colors.blur.top} />
      <BlurCircle position="bottom" color={theme.colors.blur.bottom} />
      <slot />
    </div>
    <style is:global>
        html { font-family: "Bluu Next", serif; }
    </style>
    
  </body>
</html>
